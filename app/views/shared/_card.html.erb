<div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center mb-4">
  <div class="card shadow rounded-4 h-100 w-100" style="max-width: 18rem;">
    <div class="card-body d-flex flex-column">
      <h5 class="card-title"><%= product.title %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">
        <%= product.category&.name %>
      </h6>
      <p class="card-text flex-grow-1">
        <%= product.description %>
      </p>
      <p class="card-text fw-bold mt-auto">
        R$ <%= number_with_precision(product.price, precision: 2, delimiter: ".", separator: ",") %>
      </p>
    </div>
  </div>
</div>